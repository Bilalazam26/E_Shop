<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_bg"
    tools:context=".SettingsActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile_setting"
        android:layout_width="190dp"
        android:layout_height="165dp"
        android:layout_below="@+id/back_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/profile_img_change_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_profile_setting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="25dp"
        android:text="Change Profile Image"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phone_settings"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/profile_img_change_btn"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/input_design"
        android:hint="Phone Number..."
        android:inputType="phone"
        android:padding="10dp" />

    <EditText
        android:id="@+id/full_name_settings"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/phone_settings"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/input_design"
        android:hint="Full Name..."
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/address_setting"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/full_name_settings"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/input_design"
        android:hint="Address..."
        android:inputType="text"
        android:padding="10dp" />

    <Button
        android:id="@+id/update_profile_settings"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/address_setting"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"

        android:layout_marginEnd="25dp"
        android:background="@drawable/buttons"
        android:text="Update" />

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="-11dp"
        android:layout_marginTop="-11dp"
        android:backgroundTint="@color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/back_btn_white"
        tools:ignore="SpeakableTextPresentCheck" />


</RelativeLayout>